                        <h3 class="title-3">Product Detail</h3>
                        <ul class="title">
                            <li><a asp-controller="Product" asp-action="Index">Home</a></li>
                            <i class="fa-solid fa-chevron-up fa-rotate-90"></i>
                            <li>Product Detail</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
