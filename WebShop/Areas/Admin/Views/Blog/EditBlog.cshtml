@model WebShop.Models.Blog

@{
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <div style="margin-left:50px;" class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <h4 class="header-title mb-3">Edit Blog</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="EditBlog" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="control-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContentDetail" class="control-label">Content Detail</label>
                            <textarea asp-for="ContentDetail" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="ContentDetail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Author" class="control-label">Author</label>
                            <input asp-for="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IsHot" class="control-label">Is Hot</label>
                            <input asp-for="IsHot" type="checkbox" />
                            <span asp-validation-for="IsHot" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUpload" class="control-label">Image</label>
                            <input asp-for="ImageUpload" type="file" class="form-control" />
                            <span asp-validation-for="ImageUpload" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="BlogId" />
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<div>
    <a asp-action="GetAllBlogs">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
