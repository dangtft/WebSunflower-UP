@model WebShop.Models.Paginate;
<style>
    .page-item.active .page-link {
        background-color: #E72463;
        border:none;
    }
</style>
<div class="container">
    @if (Model.TotalPages > 0) //2 trang
    {
        <ul id="page" style="margin-top: 20px;" class="pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Shop"
                       asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Shop"
                       asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++) //1 = 1 <= 2
            {
                <li class="page-item @(pge==Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Shop" asp-route-pg="@pge">@pge</a>
                </li>


            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Shop"
                       asp-route-pg="@(Model.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Shop"
                       asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>